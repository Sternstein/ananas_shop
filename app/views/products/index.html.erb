<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="sidebar panel">
        <div class="panel-body">
          <%= render partial: 'categories_bar', locals: { categories: Category.roots } %>
        </div>
      </div>
    </div>

    <div class="col-md-9">
      <div class="products-grid">
        <% @products.each do |product| %>
          <div class="col-md-4">
            <%= render partial: 'products/product', locals: { product: product } %>
          </div>
        <% end %>
      </div>
      <%= render partial: 'pager', locals: { collection: @products } %>
    </div>
  </div>
</div>
